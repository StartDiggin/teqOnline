@import './variables'

.drinkMenu 
    grid-column: 2/8 
    display grid  
    grid-template-columns: 2fr 2fr
    grid-template-rows: 300px 100px 150px 100px 800px 100px 200px 100px 200px 100px 500px 100px 675px
    background-color: bgcV
.drinkImg
    grid-column: 1/4
    transform: scaleX(1.333)
    text-align: center
    color white
    background: url("images/drinks.PNG") center no-repeat
    h1
        font-size: 40px
        font-weight: 300
        margin-top: 125px
        color white 
        text-shadow: 4px 4px 8px #000000

.headings
    grid-column: 1/4 
    text-align: center
    text-transform: uppercase
    h1 
        display inline-block
        border-top solid 1px black 
        border-bottom solid 1px black 

