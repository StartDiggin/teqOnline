@import './variables'


.lunchMenu
    grid-column: 2/8
    display grid 
    grid-template-columns: repeat(8, 1fr)
    grid-template-rows: 300px 200px 280px 100px 660px 100px 350px
    
    
.lunchImg 
    grid-column: 1/9
    transform: scaleX(1.333)
    // border borderC
    background: url("images/lunch.jpg") center no-repeat
    text-align: center 
    h1
        font-size: 40px
        font-weight: 300
        margin-top: 125px
        color white 
        text-shadow: 4px 4px 8px #000000

.lunchHours 
    grid-column: 1/9
    text-align center
    background-color bgcV
    transform: scaleY(1.1)
    h1 
     display inline-block
     border-top solid 1px black 
     border-bottom solid 1px black
     h4 
     font-family: blanch 

.lunch-left 
    grid-column: 1/5
    grid-row 3/4
    background-color bgcV
    padding luPad
    h2 
        display inline-block 
    span 
        float right 
        margin-top: 25px
    li 
        list-style-type circle !important

