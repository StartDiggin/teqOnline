header.top
    grid-column: 1/9
    background headerC
    display grid
    grid-template-columns: 1fr 1fr
    h1
    h2 
        font-family headerFont
        color primary
    .logo
        grid-column: 1/2
        background: url("images/logo.PNG") center no-repeat
    .contact
        grid-column: 2/5
    .reservations
        color primary
    .phone 
        color red
    .dropbtn {
    background-color: headerC;
    color: primary;
    padding: 8 px;
    font-size: 16px;
    border: none;
    }
    .drpMenu {
    position: relative;
    display: inline-block;
    }
    .drpMenuContent {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 110px;
        box-shadow: 0px 8px 8px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }
    .drpMenuContent a {
        color: black;
        padding: 12px 12px;
        text-decoration: none;
        display: block;
    }
    .drpMenuContent a:hover {background-color: #ddd; }
    .drpMenu:hover .drpMenuContent {
        display: block;
        border-top solid 2px red
        }
    .drpMenu:hover .dropbtn {background-color: headerC;}
    .down 
        border solid primary
        border-width: 0 3px 3px 0
        display: inline-block
        padding 3px
        margin: 0 0 2px 5px 
        transform rotate(45deg)
        -webkit-transform: rotate(45deg)
    .navRoutes 
        color primary 
        text-decoration none 
        margin 5px
        font-size: 18px
