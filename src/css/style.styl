@import 'styl/variables'
@import 'styl/fonts'
@import 'styl/header'
@import 'styl/ourMenu'
@import 'styl/lunch'
@import 'styl/drinks'
@import 'styl/orderOnline'

.main    
    display grid
    grid-template-columns: repeat(8, 1fr)
    grid-template-rows: 150px 3fr 300px
    grid-auto-rows: 300px
    background-color sideColor

li 
    list-style-type: none
    
.content
    color primary
    grid-column: 1/9

.loadAppetizers 
    height 25px
    width 50px

// About section
.about 
    grid-column: 2/8
    background-color bgcV
    padding 0 25px 25px 25px
    color rgba(51,51,51,1)
    display grid 
    grid-template-columns: 1fr
    grid-template-rows: 300px 100px 125px 125px 100px 100px
    p
        word-spacing: 0.5em

.aboutImg 
    grid-column: 1/2 
    text-align: center 
    transform: scaleX(1.382)
    color white 
    background: url("images/bar2.PNG") center no-repeat
    h1
        font-size: 40px
        font-weight: 300
        margin-top: 125px
        color white 
        text-shadow: 4px 4px 8px #000000

//  Contact Section 
.contactPage 
    grid-column: 2/8
    background-color bgcV
    color rgba(51,51,51,1)
    display grid 
    grid-template-columns: 2fr 2fr
    grid-template-rows: 300px 500px

.info 
    h1 
        color nameColor
    h3 
        margin-bottom: 0
    h4 
        margin 0
.email 
    color #c7a24f
    display inline-block
.fb   
    display inline-block

.contactImg 
    grid-column: 1/4
    transform: scaleX(1.333)
    text-align: center 
    color white 
    background: url("images/outside.PNG") center no-repeat
    h1
        font-size: 40px
        font-weight: 300
        margin-top: 125px
        color white 
        text-shadow: 4px 4px 8px #000000

.zoomzoom 
    grid-column: 2/4


//  Main Content 
.mainContent 
    grid-column: 1/9
    display grid 
    grid-template-columns: 2fr 2fr 
    grid-template-rows: 700px

.mainImg    
    grid-column: 1/3
    transform: scaleX(1.2183)
    text-align: center 
    color white
    background: url("images/tequilas.png") center no-repeat
    
    


// Footer Section
 .footer 
     grid-column: 1/9 
     display grid 

.footerContact
    background-color rgba(77,77,77,1.0)
    grid-column: 1/5
    color white 
    font-style: italic
    text-align: center
    padding: 10px
    h2 
        color white !important

.follow 
    grid-column: 5/9
    text-align: center
    color white
    background-color: rgba(77,77,77,1.0)
    padding 10px
    h2 
        color white !important

.fa {
    padding: 20px;
    font-size: 30px;
    width: 30px;
    text-align: center;
    text-decoration: none;
    margin: 5px 2px;
    border-radius: 50px
}

.fa:hover {
    opacity: 0.7;
}

.fa-facebook {
    background: #3B5998;
    color: white;
}
.copy-right 
    grid-column: 1/9 
    color white 
    text-align: center

.fa fa-copyright
    padding 0
    height: 20px 
    width:  20px
// styles for Main Menu

    